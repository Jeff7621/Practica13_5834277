<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Practica13.MainPage">

    <ScrollView>
        <VerticalStackLayout
         Spacing="25"
         Padding="30,0"
         VerticalOptions="Center">

            <Button Text="Sumar"
                 BackgroundColor="BlueViolet"
                 TextColor="Black"
                 Clicked="ButtonSumar"/>

            <Button Text="Area de un triangulo"
                 BackgroundColor="Green"
                 TextColor="Black"
                 Clicked="ButtonArea"/>

            <Button Text="Brocha Gorda"
                 BackgroundColor="Yellow"
                 TextColor="Black"
                 Clicked="ButtonBrocha"/>

            <Button Text="Distancia"
                 BackgroundColor="Red"
                 TextColor="Black"
                 Clicked="ButtonDistancia"/>

            <Button Text="Aumento sueldo"
                 BackgroundColor="Blue"
                 TextColor="Black"
                 Clicked="ButtonSueldo"/>


        </VerticalStackLayout>
    </ScrollView>


</ContentPage>
